<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:background="@drawable/border"
    android:elevation="4sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp">

        <!-- Product Name TextView -->

        <ImageButton
            android:id="@+id/increaseButtonCart"
            android:layout_width="89dp"
            android:layout_height="34dp"
            android:layout_below="@+id/productQuantityTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add" />

        <ImageButton
            android:id="@+id/deleteButtonCart"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_below="@+id/prou"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="23sp"
            android:scaleType="fitCenter"
            android:src="@drawable/remove" />

        <ImageButton
            android:id="@+id/decreaseButtonCart"
            android:layout_width="88dp"
            android:layout_height="33dp"
            android:layout_below="@+id/productQuantityTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:scaleType="fitCenter"
            android:src="@drawable/subtract" />

        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Product Price TextView -->
        <TextView
            android:id="@+id/productPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productNameTextView"
            android:layout_marginTop="8sp"
            android:text="$0.00"
            android:textSize="14sp" />

        <!-- Product Quantity TextView -->
        <TextView
            android:id="@+id/productQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productPriceTextView"
            android:layout_marginTop="8sp"
            android:text="Quantity: 0"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="195sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="30sp"
            tools:srcCompat="@tools:sample/avatars" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>